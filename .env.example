# Crypto Arbitrage AI System - Environment Variables
# Copy this file to .env and fill with your actual values

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production-minimum-32-chars

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=arbitrage
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=crypto_arbitrage

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# TimescaleDB (optional)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=timescale
TIMESCALE_PASSWORD=your_timescale_password_here
TIMESCALE_DB=crypto_timeseries

# ============================================
# EXCHANGE API CREDENTIALS
# ============================================
# Binance (Priority 1)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# OKX (Priority 2)
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Bybit (Priority 3)
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# KuCoin (Priority 4)
KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_API_SECRET=your_kucoin_api_secret_here
KUCOIN_PASSPHRASE=your_kucoin_passphrase_here

# HTX/Huobi (Priority 5)
HTX_API_KEY=your_htx_api_key_here
HTX_API_SECRET=your_htx_api_secret_here

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/arbitrage.log
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Grafana Admin
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# pgAdmin (development only)
PGADMIN_EMAIL=admin@crypto.com
PGADMIN_PASSWORD=admin123

# Jupyter (development only)
JUPYTER_TOKEN=crypto123

# ============================================
# PERFORMANCE SETTINGS
# ============================================
# Target Latencies (milliseconds)
MAX_LATENCY_MS=30
ML_INFERENCE_MS=2
FEATURE_EXTRACTION_MS=3
XAI_EXPLANATION_MS=5
DATA_COLLECTION_MS=20

# Throughput
MIN_THROUGHPUT_PER_SEC=10000

# ============================================
# RISK MANAGEMENT
# ============================================
# Position Limits (as decimal, e.g., 0.02 = 2%)
MAX_POSITION_SIZE_PCT=0.02
MAX_DAILY_LOSS_PCT=0.03
MAX_DRAWDOWN_PCT=0.05
MAX_CORRELATION_BETWEEN_TRADES=0.60
MIN_SHARPE_RATIO=2.5
VAR_95_LIMIT_PCT=0.02
MAX_LEVERAGE=3.0
MIN_CONFIDENCE_THRESHOLD=0.75

# ============================================
# CAPITAL ALLOCATION
# ============================================
# Pre-funding and Rebalancing (as decimal)
PRE_FUNDING_PCT=0.70
REBALANCING_PCT=0.30

# Strategy Allocation
SPATIAL_STRATEGY_PCT=0.40
STATISTICAL_STRATEGY_PCT=0.40
TRIANGULAR_STRATEGY_PCT=0.20
RESERVE_PCT=0.05

# ============================================
# MACHINE LEARNING
# ============================================
MIN_FEATURES=50
CONFIDENCE_THRESHOLD=0.75
ONLINE_LEARNING_ENABLED=true
RETRAIN_INTERVAL_HOURS=24
MIN_ACCURACY=0.85
WALK_FORWARD_WINDOWS=10
MONTE_CARLO_SIMULATIONS=10000

# Model Weights
XGBOOST_WEIGHT=0.30
LSTM_WEIGHT=0.25
TRANSFORMER_WEIGHT=0.25
STATISTICAL_WEIGHT=0.20

# ============================================
# NETWORK SETTINGS
# ============================================
# IMPORTANT: Only BEP20 is allowed for transfers!
TRANSFER_NETWORK=bep20
TRANSFER_GAS_LIMIT=100000
TRANSFER_GAS_PRICE_GWEI=5

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_INTERVAL=5
WS_MAX_RECONNECT_ATTEMPTS=10

# ============================================
# BACKTESTING
# ============================================
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_COMMISSION=0.001

# ============================================
# NOTIFICATIONS (Optional)
# ============================================
# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord Webhook
DISCORD_WEBHOOK_URL=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# ============================================
# ADVANCED SETTINGS
# ============================================
# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
ENABLE_RATE_LIMITING=true

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Cache TTL (seconds)
REDIS_TTL_SECONDS=300
ORDERBOOK_CACHE_TTL=1
TICKER_CACHE_TTL=5
TRADE_CACHE_TTL=10

# Execution Settings
ENABLE_LIVE_TRADING=false  # Set to true for production
DRY_RUN_MODE=true  # Set to false for real trades
PAPER_TRADING_BALANCE=10000

# Arbitrage Settings
MIN_PROFIT_PCT=0.3  # Minimum profit percentage after fees
MIN_VOLUME_USD=100  # Minimum trade volume in USD
MAX_SLIPPAGE_PCT=0.1  # Maximum allowed slippage

# ============================================
# SECURITY
# ============================================
# API Keys for internal services
INTERNAL_API_KEY=your-internal-api-key-here

# Encryption
ENABLE_ENCRYPTION=true
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# IP Whitelist (comma-separated)
IP_WHITELIST=

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SPATIAL_ARBITRAGE=true
ENABLE_STATISTICAL_ARBITRAGE=true
ENABLE_TRIANGULAR_ARBITRAGE=true
ENABLE_ML_PREDICTIONS=true
ENABLE_XAI_EXPLANATIONS=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_AUTO_REBALANCING=true
ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# CLOUD PROVIDERS (Optional)
# ============================================
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=
GCP_PROJECT_ID=
GCS_BUCKET_NAME=

# Azure
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=